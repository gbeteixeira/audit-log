{
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"useTabs": true,
	"tabWidth": 4,
	"semi": true,
	"singleQuote": false,
	"jsxSingleQuote": false,
	"trailingComma": "all",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "avoid",
	"importOrder": ["^[./]"],
	"importOrderSortSpecifiers": true,
	"importOrderSeparation": true
}
